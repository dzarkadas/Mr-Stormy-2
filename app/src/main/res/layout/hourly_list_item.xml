<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                tools:background="#ffaa00">

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/hourTimeTextView"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff"
        android:textSize="22sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hourIconImageView"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/hourTimeTextView"
        android:src="@drawable/partly_cloudy"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hourTempTextView"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="#ffffffff"
        android:textSize="22sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/hourSumTextView"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/hourIconImageView"
        android:textColor="#ffffffff"
        android:layout_toRightOf="@+id/hourIconImageView"
        android:layout_toLeftOf="@+id/hourTempTextView"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"/>
</RelativeLayout>